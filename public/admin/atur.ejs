<!DOCTYPE html>
<html>

<head>
    <% if (is_admin) { %>
    <%- include("../_includes/header", {title: "Pengaturan - Panel Admin", build_time: build_time}) %>
    <% } else { %>
    <%- include("../_includes/header", {title: "Pengaturan - Panel Peladen", build_time: build_time}) %>
    <% } %>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <style>
        h1 {
            font-size: xx-large;
        }

        h2 {
            font-size: x-large;
        }

        h3 {
            font-size: larger;
        }
    </style>
</head>

<body>
    <script src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.x.x/dist/alpine.min.js" defer></script>
    <div x-data="{ sidebarOpen: false }">
        <div class="flex h-screen bg-gray-100 dark:bg-gray-800 font-roboto">
            <%- include("../_includes/sidenav", {...locals, nav: "settings"}) %>

            <div class="flex-1 flex flex-col overflow-hidden">
                <header class="flex justify-between items-center p-6 bg-white dark:bg-gray-900">
                    <div class="flex items-center space-x-4 lg:space-x-0">
                        <button @click="sidebarOpen = true"
                            class="text-gray-500 dark:text-gray-300 focus:outline-none lg:hidden">
                            <span class="material-icons h-6 w-6 mt-2">menu</span>
                            <!-- <svg class="h-6 w-6" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M4 6H20M4 12H20M4 18H11" stroke="currentColor" stroke-width="2"
                                    stroke-linecap="round" stroke-linejoin="round" />
                            </svg> -->
                        </button>

                        <div>
                            <h1 class="text-2xl font-medium text-gray-800 dark:text-white">Pengaturan</h1>
                        </div>
                    </div>

                    <div class="flex items-center space-x-4">
                        <button class="flex text-gray-600 dark:text-gray-300 transition-colors duration-300 ease-in-out hover:text-gray-400 focus:outline-none" onclick="toggleTheme();">
                            <span class="material-icons">mode_night</span>
                        </button>
                        <div x-data="{ dropdownOpen: false }" class="relative">
                            <button @click="dropdownOpen = ! dropdownOpen"
                                class="flex items-center space-x-2 relative focus:outline-none">
                                <h2 class="text-gray-700 dark:text-gray-300 text-sm hidden sm:block"><%= username %>
                                </h2>
                                <span class="material-icons mt-3 h-9 w-9 object-cover dark:text-white">
                                    <% if (is_admin) { %>
                                        admin_panel_settings
                                    <% } else { %>
                                        person
                                    <% } %>
                                </span>
                            </button>

                            <div class="absolute right-0 mt-2 w-48 bg-white rounded-md overflow-hidden shadow-xl z-10"
                                x-show="dropdownOpen" x-transition:enter="transition ease-out duration-100 transform"
                                x-transition:enter-start="opacity-0 scale-95"
                                x-transition:enter-end="opacity-100 scale-100"
                                x-transition:leave="transition ease-in duration-75 transform"
                                x-transition:leave-start="opacity-100 scale-100"
                                x-transition:leave-end="opacity-0 scale-95" @click.away="dropdownOpen = false">
                                <a href="/api/auth/logout"
                                    class="block px-4 py-2 text-sm text-gray-700 hover:bg-purple-600 hover:text-white">Keluar</a>
                            </div>
                        </div>
                    </div>
                </header>

                <main id="root" class="flex-1 overflow-x-hidden overflow-y-auto" aria-type="settings">
                    <div class="container mx-auto px-6 py-8">
                        <div class="grid gap-2 sm:grid-cols-1 lg:grid-cols-1">
                            <div class="p-3 bg-white dark:bg-gray-700 rounded shadow-sm">

                                <% if (!is_admin) { %>
                                <div class="flex flex-col py-1">
                                    <h3 class="font-semibold dark:text-white mb-2">Ubah Channel Announcer</h3>
                                    <% if (locals.channelError && channelError) { %>
                                    <div class="text-sm font-semibold text-red-400"><%= channelError %></div>
                                    <% } %>
                                    <% if (locals.channelInfo && channelInfo) { %>
                                    <div class="text-sm font-semibold text-green-400"><%= channelInfo %></div>
                                    <% } %>
                                    <div class="flex flex-row pb-2">
                                        <form id="channelid-change" method="POST" action="/api/auth/announcechannel">
                                            <div class="flex -mx-3">
                                                <div class="w-full px-3 mb-1">
                                                    <label for="channel-edit" class="text-sm font-semibold dark:text-white mb-1">Channel Announce</label>
                                                    <input id="channel-edit" type="number" name="channelid" class="w-full py-1 rounded-lg border-2 transition-colors duraion-400 ease-in-out border-gray-200 outline-nones focus:border-yellow-600" placeholder="xxxxxxxxxxxxxx">
                                                </div>
                                            </div>
                                            <div class="flex mt-2">
                                                <button id="channel-change-btn" type="submit" class="rounded-lg text-white px-4 py-2 bg-blue-600 hover:bg-blue-700 transition duration-300 place-self-center hover:stack-shadow-3 ring-offset-blue-800">
                                                    <span class="text-base font-semibold">Ubah</span>
                                                </button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                                <% } %>

                                <% if (!is_admin) { %>
                                <div class="flex flex-col py-1">
                                    <h3 class="font-semibold dark:text-white mb-2">Atur Admin</h3>
                                    <div class="flex flex-row pb-2" id="adminform-change">
                                        <form id="adminform-change" action="/api/showtimes/admin">
                                            <div id="admin-list" class="flex flex-col">
                                                <% for (let i = 0; i < serverAdmin.length; i++) { %>
                                                    <span class="dark:text-white">- <%= serverAdmin[i] %></span>
                                                <% } %>
                                            </div>
                                            <div class="flex mt-2">
                                                <button id="admin-add-btn" type="submit" class="rounded-lg text-white px-4 py-2 mr-2 bg-green-600 hover:bg-green-700 transition duration-300 place-self-center hover:stack-shadow-3 ring-offset-green-800 hidden">
                                                    <span class="text-base font-semibold">Tambah</span>
                                                </button>
                                                <button id="admin-change-btn" type="submit" class="rounded-lg text-white px-4 py-2 bg-blue-600 hover:bg-blue-700 transition duration-300 place-self-center hover:stack-shadow-3 ring-offset-blue-800" data-role="show">
                                                    <span class="text-base font-semibold">Ubah</span>
                                                </button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                                <% } %>

                                <div class="flex flex-col py-1">
                                    <h3 class="font-semibold dark:text-white mb-2">Ubah Password</h3>
                                    <% if (locals.resetError && resetError) { %>
                                    <div class="text-sm font-semibold text-red-400"><%= resetError %></div>
                                    <% } %>
                                    <% if (locals.resetInfo && resetInfo) { %>
                                    <div class="text-sm font-semibold text-green-400"><%= resetInfo %></div>
                                    <% } %>
                                    <div class="flex flex-row pb-2">
                                        <form id="passwd-reset" method="POST" action="/api/auth/reset">
                                            <div class="flex -mx-3">
                                                <div class="w-full px-3 mb-1">
                                                    <label for="password-old" class="text-sm font-semibold dark:text-white mb-1">Password Lama</label>
                                                    <input id="password-old" type="password" name="old" data-role="TL" class="w-full py-1 rounded-lg border-2 transition-colors duraion-400 ease-in-out border-gray-200 outline-nones focus:border-yellow-600" placeholder="**************">
                                                </div>
                                            </div>
                                            <div class="flex -mx-3">
                                                <div class="w-full px-3 mb-1">
                                                    <label for="password-new" class="text-sm font-semibold dark:text-white mb-1">Password Baru</label>
                                                    <input id="password-new" type="password" name="new" class="w-full py-1 rounded-lg border-2 transition-colors duraion-400 ease-in-out border-gray-200 outline-nones focus:border-yellow-600" placeholder="**************">
                                                </div>
                                            </div>
                                            <div class="flex mt-2">
                                                <button id="passwd-change-btn" type="submit" class="rounded-lg text-white px-4 py-2 bg-blue-600 hover:bg-blue-700 transition duration-300 place-self-center hover:stack-shadow-3 ring-offset-blue-800">
                                                    <span class="text-base font-semibold">Ubah</span>
                                                </button>
                                            </div>
                                        </form>
                                    </div>
                                </div>

                                <div class="flex flex-col py-1">
                                    <h3 class="font-semibold dark:text-white mb-2">Ubah Nama</h3>
                                    <% if (locals.nameError && nameError) { %>
                                    <div class="text-sm font-semibold text-red-400"><%= nameError %></div>
                                    <% } %>
                                    <% if (locals.nameInfo && nameInfo) { %>
                                    <div class="text-sm font-semibold text-green-400"><%= nameInfo %></div>
                                    <% } %>
                                    <div class="flex flex-row pb-2">
                                        <form id="uname-change" method="POST" action="/api/auth/changename">
                                            <div class="flex -mx-3">
                                                <div class="w-full px-3 mb-1">
                                                    <label for="name-new" class="text-sm font-semibold dark:text-white mb-1">Nama Baru</label>
                                                    <input id="name-new" type="text" name="newname" class="w-full py-1 rounded-lg border-2 transition-colors duraion-400 ease-in-out border-gray-200 outline-nones focus:border-yellow-600" placeholder="xxxxxxxxxx">
                                                </div>
                                            </div>
                                            <div class="flex mt-2">
                                                <button id="name-change-btn" type="submit" class="rounded-lg text-white px-4 py-2 bg-blue-600 hover:bg-blue-700 transition duration-300 place-self-center hover:stack-shadow-3 ring-offset-blue-800">
                                                    <span class="text-base font-semibold">Ubah</span>
                                                </button>
                                            </div>
                                        </form>
                                    </div>
                                </div>

                                <% if (!is_admin) { %>
                                <div class="grid gap-2 sm:grid-cols-1 lg:grid-cols-2 py-1">
                                    <div class="flex flex-col">
                                        <h3 class="font-semibold dark:text-white mb-2">Website Embed</h3>
                                        <div class="text-sm font-semibold text-blue-400">Buat URL untuk embed daftar utang di Website anda!</div>
                                        <div class="block bg-gray-300 dark:bg-gray-800 px-3 py-2 dark:text-gray-300 mt-2">
                                            <a id="embed-url" data-server-id="<%= user_id %>" data-accent="green" data-lang="id" data-dark="false" href="<%= embed_origin %>/embed?id=<%= user_id %>" target="_blank"><%= embed_origin %>/embed?id=<%= user_id %></a>
                                        </div>
                                    </div>

                                    <div class="hidden md:flex md:flex-col md:col-start-2">
                                        <span class="dark:text-white mb-2 font-semibold ml-1">Pratinjau</span>
                                        <iframe id="embed-framing-big" src="<%= embed_origin %>:5000/embed?id=<%= user_id %>"></iframe>
                                    </div>

                                    <label class="mt-2 flex flex-col col-start-1">
                                        <span class="dark:text-white">Aksen Warna</span>
                                        <select id="embed-color" class="form-select mt-1 block w-full">
                                            <option value="green" selected>Hijau</option>
                                            <option value="blue">Biru</option>
                                            <option value="yellow">Kuning</option>
                                            <option value="red">Merah</option>
                                            <option value="indigo">Indigo</option>
                                            <option value="purple">Ungu</option>
                                            <option value="pink">Pink</option>
                                            <option value="none">Tidak Ada</option>
                                        </select>
                                    </label>

                                    <label class="mt-2 flex flex-col col-start-1">
                                        <span class="dark:text-white">Bahasa</span>
                                        <select id="embed-locale" class="form-select mt-1 block w-full">
                                            <option value="id">Indonesia</option>
                                            <option value="en">English</option>
                                        </select>
                                    </label>

                                    <div class="flex flex-col mt-2 col-start-1">
                                        <label class="inline-flex items-center">
                                            <input id="embed-dark" type="checkbox" class="form-checkbox text-green-500 rounded focus:outline-none">
                                            <span class="ml-2 dark:text-white">Dark Mode</span>
                                        </label>
                                    </div>

                                    <div class="flex flex-col md:hidden">
                                        <span class="dark:text-white mb-2 ml-1">Pratinjau</span>
                                        <iframe id="embed-framing-small" class="embed-framing" src="<%= embed_origin %>:5000/embed?id=<%= user_id %>"></iframe>
                                    </div>
                                </div>
                                <% } %>
                            </div>
                        </div>
                    </div>

                    <!-- modal div -->
                    <div id="modal-main" class="mt-6" x-data="{ showModal: false }">
                        <!-- Dialog (full screen) -->
                        <div class="absolute top-0 left-0 flex items-center justify-center w-full h-full"
                            style="background-color: rgba(0,0,0,.5); display: none;" x-show="showModal">
                            <!-- A basic modal dialog with title, body and one button to close -->
                            <div class="h-auto p-4 mx-6 text-left bg-white dark:bg-gray-700 rounded shadow-xl md:max-w-xl md:p-6 lg:p-8 md:mx-0"
                                @click.away="showModal = false"
                                x-show="showModal"
                                x-transition:enter="transition ease-out duration-300"
                                x-transition:enter-start="opacity-0 transform scale-110"
                                x-transition:enter-end="opacity-100 transform scale-100"
                                x-transition:leave="transition ease-out duration-300"
                                x-transition:leave-start="opacity-100 transform scale-100"
                                x-transition:leave-end="opacity-0 transform scale-90"
                                style="display: none;">
                                <div class="mt-3 text-center sm:mt-0 sm:mx-2 sm:text-left">
                                    <h3 class="text-lg font-medium leading-6 text-gray-900 dark:text-gray-100">
                                        Terjadi Kesalahan
                                    </h3>

                                    <div class="mt-2">
                                        <p class="text-sm leading-5 text-gray-500 dark:text-gray-300" aria-type="modal-text">
                                        </p>
                                    </div>
                                </div>

                                <!-- One big close button.  --->
                                <div class="mt-5 sm:mt-6">
                                    <span class="flex w-full rounded-md shadow-sm">
                                        <button @click="showModal = false"
                                            class="inline-flex justify-center font-semibold w-full px-4 py-2 text-white bg-red-500 rounded hover:bg-red-700">
                                            Tutup
                                        </button>
                                    </span>
                                </div>

                            </div>
                        </div>
                    </div>
                </main>
            </div>
        </div>
    </div>
    </div>
    <script src="/assets/js/projects.bundle.js"></script>
</body>